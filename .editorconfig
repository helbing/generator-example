root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[{Makefile, makefile, GNUmakefile, Makefile.*}]
indent_style = tab
indent_size = 4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{codecov.yml, .codecov.yml}]
end_of_line = unset
insert_final_newline = false
